absolute-full()
	position absolute
	top 0
	right 0
	bottom 0
	left 0

/* CSS declarations go here */
*
	user-select none
	-webkit-user-select none
	padding 0
	margin 0
html, body
	margin 0
	padding 0
	background black
.icon
	absolute-full()
	width 100%
	height 100%
#pFirstFill
	fill #fff
#pLastFill
	fill #fff
#videoWrapper
	absolute-full()
#video
	absolute-full()

