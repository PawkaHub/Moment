	user-select none
	-webkit-user-select none
html, body
	margin 0
	padding 0
.icon
	absolute-full()
	width 100%
	height 100%
#pFirstFill
	fill #fff
#pLastFill
	fill #fff
#videoWrapper
	absolute-full()
