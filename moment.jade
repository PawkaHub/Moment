head
	title Moment
	meta(name='apple-mobile-web-app-capable' content='yes')
	meta(name='apple-mobile-web-app-status-bar-style' content='black-translucent')
	meta(name='viewport' content='width=device-width,initial-scale=1,maximum-scale=1,user-scalable=no,minimal-ui')
body

template(name='layout')
	+RenderController target='content' size='[undefined,undefined]'
		+yield

template(name='about')
	+View size='[undefined,undefined]'
		+timelineMinuteScroller
		+timelineDayScroller
		+timelineMonthScroller
		+timelineYearScroller
		+Surface template='background' size='[undefined,undefined]' origin='[0.5,0.5]' align='[0.5,0.5]' translate='[0,0,0]' opacity='1' properties=backgroundStyles
		+Surface template='overlay' size='[undefined,undefined]' origin='[0.5,0.5]' align='[0.5,0.5]' translate='[0,0,0]' opacity='0.4' properties=overlayStyles
		+Surface template='intro' size='[200,200]' origin='[0.5,0.5]' align='[0.5,0.5]' translate='[0,0,0]' opacity='1' properties=introStyles
		+Surface template='question' size='[200,80]' origin='[0.5,0.5]' align='[0.5,0.5]' translate='[0,0,0]' opacity='1' properties=questionStyles
		+Surface template='momentButton' size='[200,40]' origin='[0.5,0.5]' align='[0.5,0.5]' translate='[0,0,0]' opacity='1' properties=momentButtonStyles
		+Surface template='ppLogo' size='[100,100]' origin='[1,1]' align='[1,1]' translate='[-10,-10,0]' opacity='0.14' properties=ppLogoStyles
		+Surface template='timer' size='[60,60]' origin='[0.5,1]' align='[0.5,0.5]' translate='[0,100,0]' opacity='1' properties=timerStyles
		+Surface template='timelineToggle' size='[60,60]' origin='[1,0]' align='[1,0]' translate='[-10,10,0]' opacity='0.14' properties=timelineToggleStyles
		+Surface template='timelineOverlay' size='[undefined,undefined]' origin='[0,0]' align='[0,0]' translate='[0,0,0]' opacity='0.85' properties=timelineOverlayStyles

template(name='timelineMinuteScroller')
	+Scrollview size='[undefined,undefined]' origin='[0,0]' align='[0,0]' translate='[0,0,1]'
		+famousEach minutes
			+Surface template='timelineMinute' size='[undefined,400]' properties=timelineMinuteStyles

template(name='timelineDayScroller')
	+Scrollview size='[380,undefined]' origin='[1,0]' align='[1,0.5]' translate='[0,0,1]'
		+famousEach days
			+Surface template='timelineDay' size='[undefined,100]' properties=timelineDayStyles

template(name='timelineMonthScroller')
	+Scrollview size='[240,undefined]' origin='[1,0]' align='[1,0.5]' translate='[0,0,1]'
		+famousEach months
			+Surface template='timelineMonth' size='[undefined,100]' properties=timelineMonthStyles

template(name='timelineYearScroller')
	+Scrollview size='[100,undefined]' origin='[1,0]' align='[1,0.5]' translate='[0,0,1]'
		+famousEach years
			+Surface template='timelineYear' size='[undefined,100]' properties=timelineYearStyles

template(name='background')
	//-This is the background for cycling of images
	#videoWrapper.bigClass
		#video

template(name='overlay')
	//-This is the dot overlay

template(name='intro')
	| Moment

template(name='momentButton')
	| Share Your Moment

template(name='timer')
	= timer

template(name='question')
	| Question of the Day

template(name='timelineScroller')
	| timelineScroller

template(name='timelineToggle')
	= currentEpoch

template(name='timelineOverlay')
	| timelineOverlay

template(name='timelineMinute')
	p= minute.formattedMinute
	//-p= minute.index

template(name='timelineMoment')
	ul
		li= moment.archiveCreatedAt
		li= moment.tokboxArchiveId
		li= moment.tokboxArchiveName
		//-li= moment.tokboxPartnerId
		//-li= moment.tokboxSessionId
		//-li= moment.archiveUpdatedAt

template(name='timelineDay')
	//-p= day.formattedDay
	p= day.index

template(name='timelineMonth')
	//-p= month.formattedMonth
	p= month.index

template(name='timelineYear')
	//-p= year.formattedYear
	p= year.index

